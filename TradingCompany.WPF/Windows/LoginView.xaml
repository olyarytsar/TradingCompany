<UserControl x:Class="TradingCompany.WPF.Windows.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1000">

    <Grid>
        <Border Background="White" CornerRadius="20" Padding="40" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Width="380">
            <Border.Effect>
                <DropShadowEffect BlurRadius="25" Opacity="0.15" Color="#1565C0" ShadowDepth="0"/>
            </Border.Effect>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Trading Company" FontSize="32" FontWeight="Bold" 
                           Foreground="{StaticResource DarkTextBrush}" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>


                <TextBlock Text="Login" FontWeight="SemiBold" Foreground="{StaticResource DarkTextBrush}" Margin="0,0,0,8"/>
                <TextBox Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" 
                         Height="45" VerticalContentAlignment="Center" FontSize="14" Margin="0,0,0,20"/>

                <TextBlock Text="Password" FontWeight="SemiBold" Foreground="{StaticResource DarkTextBrush}" Margin="0,0,0,8"/>
                <PasswordBox x:Name="UserPasswordBox" 
                             Height="45" VerticalContentAlignment="Center" FontSize="14" Margin="0,0,0,40"/>


                <Button Content="SIGN IN" Height="55" FontSize="16" FontWeight="Bold"
                    Command="{Binding LoginCommand}" 
                    CommandParameter="{Binding ElementName=UserPasswordBox}">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.25" ShadowDepth="3" Color="#90CAF9"/>
                    </Button.Effect>
                </Button>

                <Button Content="Exit Application" Background="Transparent" Foreground="Gray" 
                    Margin="0,20,0,0" FontSize="13"
                    Command="{Binding ExitCommand}"
                    HorizontalAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <TextBlock Text="{TemplateBinding Content}" Cursor="Hand" TextDecorations="Underline"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
