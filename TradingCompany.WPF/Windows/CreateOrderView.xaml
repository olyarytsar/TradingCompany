<UserControl x:Class="TradingCompany.WPF.Windows.CreateOrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="700" d:DesignWidth="1000">

    <Grid Margin="30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="380"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="20" Padding="30" Margin="0,0,25,0" VerticalAlignment="Top" Height="630">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.08" ShadowDepth="5" Color="#1565C0"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="New order" FontSize="26" FontWeight="Bold" 
                           Foreground="{StaticResource DarkTextBrush}" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="1. Select supplier" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,8"/>
                <ComboBox ItemsSource="{Binding Suppliers}" SelectedItem="{Binding SelectedSupplier}"
                          DisplayMemberPath="Brand" Height="45" Margin="0,0,0,25"
                          BorderBrush="{StaticResource AccentBlueBrush}" Padding="10,0"/>

                <TextBlock Text="2. Select product" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,8"/>
                <ComboBox ItemsSource="{Binding Products}" SelectedItem="{Binding SelectedProduct}"
                          DisplayMemberPath="Name" Height="45" Margin="0,0,0,25"
                          BorderBrush="{StaticResource AccentBlueBrush}" Padding="10,0"/>

                <Grid Margin="0,0,0,35">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,15,0">
                        <TextBlock Text="Quantity" FontWeight="SemiBold" Foreground="#555" Margin="0,0,0,8"/>
                        <TextBox Text="{Binding QuantityToAdd}" Height="45" 
                                 FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" VerticalAlignment="Bottom">
                        <TextBlock Text="Price" FontSize="12" Foreground="Gray" Margin="0,0,0,4"/>
                        <Border Background="{StaticResource PrimaryBlueBrush}" CornerRadius="8" Padding="15,10" Width="89">
                            <TextBlock Text="{Binding SelectedProduct.Price, StringFormat=C, TargetNullValue='-'}" 
                                       FontSize="18" FontWeight="Bold" Foreground="{StaticResource DarkTextBrush}" Margin="-15,0,-15,0"/>
                        </Border>
                    </StackPanel>
                </Grid>

                <Button Content="Add to list " Command="{Binding AddItemCommand}" 
                        Height="55" FontSize="16" FontWeight="Bold" Cursor="Hand">
                    <Button.Effect>
                        <DropShadowEffect BlurRadius="10" Opacity="0.2" ShadowDepth="2" Color="#64B5F6"/>
                    </Button.Effect>
                </Button>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Order items" FontSize="20" FontWeight="Bold" 
                       Foreground="{StaticResource DarkTextBrush}" Margin="5,0,0,15"/>

            <DataGrid Grid.Row="1" ItemsSource="{Binding OrderItems}" 
                      SelectedItem="{Binding SelectedCartItem}"
                      BorderBrush="{StaticResource AccentBlueBrush}" BorderThickness="1"
                      Background="White" RowHeight="45"
                      HeadersVisibility="Column" GridLinesVisibility="Horizontal">

                <DataGrid.Resources>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Padding" Value="10"/>
                        <Setter Property="Background" Value="{StaticResource PrimaryBlueBrush}"/>
                        <Setter Property="Foreground" Value="{StaticResource DarkTextBrush}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="Height" Value="50"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="BorderBrush" Value="{StaticResource AccentBlueBrush}"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product Name" Binding="{Binding Product.Name}" Width="*"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Product.Price, StringFormat=C}" Width="100"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding TotalPrice, StringFormat=C}" Width="120" FontWeight="Bold"/>
                </DataGrid.Columns>
            </DataGrid>

            <Border Grid.Row="2" Background="White" CornerRadius="15" Padding="20" Margin="0,20,0,0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Opacity="0.08"/>
                </Border.Effect>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="Remove item" Command="{Binding RemoveItemCommand}" 
                            Background="#FFEBEE" Foreground="{StaticResource ErrorBrush}" 
                            Width="140" Height="45" FontWeight="SemiBold"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <StackPanel VerticalAlignment="Center" Margin="0,0,25,0">
                            <TextBlock Text="Total amount:" FontSize="12" Foreground="Gray" HorizontalAlignment="Right"/>
                            <TextBlock Text="{Binding TotalOrderSum, StringFormat=C}" 
                                       FontSize="24" FontWeight="Bold" 
                                       Foreground="{StaticResource DarkTextBrush}"/>
                        </StackPanel>

                        <Button Content="Create order" Command="{Binding SubmitOrderCommand}" 
                                Width="180" Height="50" FontSize="16" FontWeight="Bold">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.2" ShadowDepth="2" Color="#64B5F6"/>
                            </Button.Effect>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>